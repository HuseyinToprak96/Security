
@{
    ViewData["Title"] = "CommentAdd2";
}

<h1>CommentAdd2</h1>

<form method="post">
    <input type="text" name="name" />
    <textarea type="text" name="comment"></textarea>
    <input type="submit" value="Ekle" />
</form>
<h1>Yorumlar</h1>
@if (ViewBag.comments!=null)
{
    foreach (var item in ViewBag.comments as string[])
    {
        <span>@item</span><hr />
    }
}